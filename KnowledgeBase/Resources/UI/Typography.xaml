<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Caption.Icons.12" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
        <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style x:Key="Caption.Icons.16" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
        <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="Caption.Display.12" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style x:Key="Caption.Display.16" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>